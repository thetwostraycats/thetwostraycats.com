<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Interactive Travel Map</title>
    <style>
        #map {
            height: 100vh;
            width: 100%;
        }
        body {
            margin: 0;
            font-family: 'Verdana', sans-serif;
            background-color: #f5f5f5;
        }
    </style>
    <!-- Mapbox GL JS -->
    <script src="https://api.mapbox.com/mapbox-gl-js/v2.14.1/mapbox-gl.js"></script>
    <link href="https://api.mapbox.com/mapbox-gl-js/v2.14.1/mapbox-gl.css" rel="stylesheet" />
</head>
<body>
    <div id="map"></div>

    <script>
        // Initialize Mapbox with your token
        mapboxgl.accessToken = 'pk.eyJ1IjoidHdvc3RyYXljYXRzIiwiYSI6ImNtMDVvNWg0MDBtYTUyanMyd3l0c2dkZ3MifQ.rMTSjEzGk3UJJ_44yksV9Q';

        var map = new mapboxgl.Map({
            container: 'map', // container ID
            style: 'mapbox://styles/mapbox/streets-v11', // style URL
            center: [20.0, 45.0], // starting position [lng, lat]
            zoom: 3 // starting zoom
        });

        // Add zoom and rotation controls to the map.
        map.addControl(new mapboxgl.NavigationControl());

        // Load GeoJSON data for the route
        map.on('load', function () {
            map.addSource('travel-route', {
                type: 'geojson',
                data: 'https://raw.githubusercontent.com/thetwostraycats/thetwostraycats.com/403e5b48aa6a7e0ad03573b223e806468d744bae/travel-route.GeoJSON'
            });

            // Add the route line layer
            map.addLayer({
                'id': 'route',
                'type': 'line',
                'source': 'travel-route',
                'layout': {
                    'line-join': 'round',
                    'line-cap': 'round'
                },
                'paint': {
                    'line-color': [
                        'interpolate',
                        ['linear'],
                        ['get', 'index'],
                        0, '#FF6347',   // Start with Tomato
                        1, '#32CD32'    // End with Lime Green
                    ],
                    'line-width': 4
                }
            });

            // Add a symbol layer for markers
            map.addLayer({
                'id': 'points',
                'type': 'circle',
                'source': 'travel-route',
                'paint': {
                    'circle-radius': 6,
                    'circle-color': [
                        'interpolate',
                        ['linear'],
                        ['get', 'index'],
                        0, '#FF6347',   // Start with Tomato
                        1, '#32CD32'    // End with Lime Green
                    ]
                }
            });
        });
    </script>
</body>
</html>
